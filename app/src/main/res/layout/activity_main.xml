<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--    Progress Bar-->

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/progress_circular"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        app:cpb_background_progressbar_color="#F2F2F2"
        app:cpb_background_progressbar_width="20dp"
        app:cpb_progress_direction="to_right"
        app:cpb_progress_max="3000"
        app:cpb_progressbar_color="#3f51b5"
        app:cpb_progressbar_width="15dp" />

    <!-- TextView Steps Taken Since Last Reboot -->
    <TextView
        android:id="@+id/step_since_reboot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steps Taken since last reboot: "
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_above="@+id/step_morning"
        android:layout_centerInParent="true"
        />


    <!--    TextView Current Steps-->

    <TextView
        android:id="@+id/step_morning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/progress_circular"
        android:layout_marginBottom="100dp"
        android:layout_centerInParent="true"
        android:text="Steps Taken This morning: "
        android:textSize="20sp"
        android:textStyle="bold" />



    <!--    TextView Current Steps-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textStyle="normal|bold|italic"
        android:textSize="35dp"
        android:layout_centerInParent="true"
        android:id="@+id/step_current"
        />

    <!--    TextView Goal-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/ 3000"
        android:textStyle="normal|bold|italic"
        android:textSize="15dp"
        android:layout_below="@+id/step_current"
        android:layout_centerInParent="true"
        />



    <!-- Reset Button -->



    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Steps"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>